WX_VERSION=2.8
inherit wxwidgets

DESCRIPTION="FileZilla FTP/FTPS/SFTP client"
HOMEPAGE="http://filezilla-project.org/"
SRC_URI="mirror://sourceforge/${PN}/FileZilla_${PV/_/-}_src.tar.bz2"
PATCH_URI="
	3.0.11.1-wxEvent.patch
	3.0.11.1-binreloc.patch
	3.1.3-ipv6.patch
	3.1.3-ansi.patch
"

SRC_DIR="${P/_/-}"

CYGCONF_ARGS+=" WXRC=/usr/bin/wxrc-${WX_VERSION}"
# cannot be added to LIBS during configure due to false positive HAVE_GETADDRINFO
MAKEOPTS+=" LIBS=-lgetaddrinfo"
